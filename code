import random

lanes = ['North', 'East', 'South', 'West']

MIN_GREEN = 10
MAX_GREEN = 60

def run_traffic():
    print("Traffic Flow Optimization\n")

    traffic = {lane: random.randint(0, 50) for lane in lanes}
    total = sum(traffic.values())

    for lane in lanes:
        if total:
            green = int((traffic[lane] / total) * MAX_GREEN)
        else:
            green = MIN_GREEN
        green = max(MIN_GREEN, green)
        print(f"{lane}: {traffic[lane]} vehicles => {green} sec GREEN")

run_traffic()
